# ===========================================
# Local Development Configuration
# ===========================================

# API URL (used by frontend to call backend)
NEXT_PUBLIC_API_URL=http://localhost:8080

# Backend repository (for fetching OpenAPI spec)
BACKEND_REPO_URL=https://raw.githubusercontent.com/bissquit/incident-garden/main

# ===========================================
# Docker Compose Configuration
# ===========================================

# PostgreSQL
POSTGRES_USER=statuspage
POSTGRES_PASSWORD=statuspage
POSTGRES_DB=statuspage
POSTGRES_PORT=5452

# Backend
BACKEND_IMAGE_NAME=ghcr.io/bissquit/incident-garden
BACKEND_IMAGE_TAG=latest
BACKEND_PORT=8080

# Frontend
FRONTEND_PORT=3000

# JWT (REQUIRED for docker-compose!)
JWT_SECRET_KEY=your-secret-key-change-in-production

# Logging
LOG_LEVEL=info
LOG_FORMAT=json
