    "postcss": "^8.4.0",
    "prettier": "^3.4.0",
    "tailwindcss": "^3.4.0",
    "tailwindcss-animate": "^1.0.7",
    "typescript": "^5.6.0",
    "vitest": "^2.1.0"
  }
